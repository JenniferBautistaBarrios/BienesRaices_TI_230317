extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-murrey-500.animate__animated.animate__bounce.animate__slow Bienes
            span.font-normal Raices
        h2.text-center.font-extrabold.my-10.text-2xl= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-murrey-900.text-white.uppercase.text-center.text-xs.p-2.mb-1.font-bold.rounded-md.alert.animate__animated.animate__shakeX= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-pink-100.py-8.px-4.shadow.animate__animated.animate__fadeInUp.animate__faster.rounded-md
                form.space-y-5(method="POST" novalidate) 
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-murrey-700.mb-2.font-bold(for="password") Coloca tu nuevo Password
                        input#passwordl.w-full.px-3.py-4.border.border-murrey-200.rounded-md(placeholder="Escribe tu nuevo password" type="password" name="password") 
                   
                    input(class="w-full bg-murrey-600 hover:bg-murrey-700 text-white font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Guardar Password")    
