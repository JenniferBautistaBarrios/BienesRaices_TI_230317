extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-murrey-500.animate__animated.animate__bounce.animate__slow Bienes
            span.font-normal Raices
        h2.text-center.font-extrabold.my-10.text-2xl= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    div(class="flex items-center bg-murrey-900 text-white uppercase text-sm p-2 mb-1 font-bold rounded-md alert animate__animated animate__shakeX justify-between")
                        div(class="flex items-center justify-center w-6 h-6 mr-4 flex-shrink-0") 
                            img(src="/img/error.svg", alt="Error Icon", class="w-full h-full")
                        p(class="font-sans tracking-wide")= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow.card.shadow.animate__animated.animate__fadeInUp.animate__faster.rounded-md
                form.space-y-5(method="POST" action="/auth/registro" novalidate)
                    input(type="hidden" name="_csrf" value= csrfToken) 
                    div 
                        label.block.text-sm.uppercase.text-murrey-700.mb-2.font-bold(for="alias") Alias
                        input#alias.w-full.px-3.py-4.border.border-murrey-200.rounded-md(placeholder="Escribe tu alias" type="text" name="alias" value= alias ? usuario.alias : '')
                    div 
                        label.block.text-sm.uppercase.text-murrey-700.mb-2.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-4.border.border-murrey-200.rounded-md(placeholder="Escribe tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div 
                        label.block.text-sm.uppercase.text-murrey-700.mb-2.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-4.border.border-murrey-200.rounded-md(placeholder="Escribe tu email" type="email" name="email" value= usuario ? usuario.email : '' ) 
                    div 
                        label.block.text-sm.uppercase.text-murrey-700.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-4.border.border-murrey-200.rounded-md(placeholder="Escribe tu password" type="password" name="password" )        
                    div 
                        label.block.text-sm.uppercase.text-murrey-700.mb-2.font-bold(for="repetir_password") Repetir password
                        input#repetir_password.w-full.px-3.py-4.border.border-murrey-200.rounded-md(placeholder="Repite tu password" type="password" name="repetir_password")         
                    
                    div 
                        label.block.text-sm.uppercase.text-murrey-700.mb-2.font-bold(for="fecha_nacimiento") Fecha de Nacimiento
                        input#fecha_nacimiento.w-full.px-3.py-4.border.border-murrey-200.rounded-md(type="date" name="fecha_nacimiento")         
                    
                    div.flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/login"  class="hover:text-murrey-900 hover:decoration-murrey-900 hover:underline") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="/auth/olvide-password"  class="hover:text-murrey-900 hover:decoration-murrey-900 hover:underline") Olvide mi Password 

                    input(class="w-full bg-murrey-600 hover:bg-murrey-700 text-white font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Crear cuenta")    
