extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)
block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-murrey-500.animate__animated.animate__bounce Bienes
            span.font-normal Raices
        h2.text-center.font-extrabold.my-10.text-2xl= pagina

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10 card")
            form(id="imagen" class="dropzone border-dashed border-4 border-murrey-500 w-full min:h-96 h-auto rounded flex-col justify-center items-center text-murrey-500 font-bold" method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}` data-context="propiedad")
                input(type="hidden" name="_csrf" value= csrfToken)
                

            button(id="publicar" class="mt-8 w-full bg-murrey-400 hover:bg-murrey-700 text-white font-bold py-3 cursor-pointer rounded-lg" type="button") Publicar Propiedad   

block scripts 
    script(src="/js/agregarImagen.js")